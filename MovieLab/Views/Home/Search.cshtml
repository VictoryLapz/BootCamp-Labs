@model List<Movie>

@if(Model.Count == 0)
{
     <p>No Movies found.</p>
}
else
    {
    <div class="row">
        @foreach (var movie in Model)
        {
        <div class="col-3">
            <div class="card">
                <img src="@movie.Poster" class="card-img-top" />
                <div class="card-body">
                    <h4 class="card-title">@movie.Title</h4>
            </div>
        </div>
    </div>
        }
    </div>
    }
